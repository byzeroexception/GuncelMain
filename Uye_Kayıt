package Uye_Kayıt;

import java.sql.*;

public class Uye_Kayıt {

	 static void Insert() {
		CustomerRegistration CR = new CustomerRegistration();
		Connection connection = null;
		DPHelper dp = new DPHelper(); 
		PreparedStatement statement = null;
		try {
			connection = dp.getConnection();
			String sql = "insert into kullanicilar.bilgiler (Ad_Soyad,Email,Kullanici_Adi,Sifre)"
					+ "values (?,?,?,?)";
			statement = connection.prepareStatement(sql);
			statement.setString(1,CR.FFname.getText());
			statement.setString(2,CR.Fmail.getText());
			statement.setString(3,CR.FFname.getText());
			statement.setString(4,CR.FPass.getText());
			
		statement.executeUpdate();
		System.out.println("Kayit basarisiz");
		}catch(SQLException e) {
		System.err.println("Kayit basarisiz");
		System.out.println(e);
		}
	}
		static void add() {
			DPHelper dp = new DPHelper();
			Insert();
		}
	}

	

