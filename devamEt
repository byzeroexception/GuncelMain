package help;

import java.awt.Color;
import java.awt.Font;

import javax.swing.BorderFactory;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class CusRegLog {
	public static String name;
	public static String firstName;
	public static String eMail;
	public static String accountNum;
	public static String password;
	public static String passwordRec;

	public static JPanel timePanel = new JPanel();
	public static JLabel timeLabel = new JLabel();
	static void log() {
	CustomerRegistration CR = new CustomerRegistration();
		
		
		timePanel.setBackground(Color.white);
		timePanel.setBounds(10, 230, 200, 20);
		CR.CR_panel.add(timePanel);
		
		name        = CR.Fname.getText(); 
		firstName   = CR.FFname.getText();
		eMail       = CR.Fmail.getText();
		accountNum  = CR.FAccNum.getText();
		password    = CR.FPass.getText();
		passwordRec = CR.FPassRec.getText();
}
	static void label() {
		CustomerRegistration CR = new CustomerRegistration();
		timeLabel.setText("Şifre ve isim aynı olamaz");
		timeLabel.setFont(new Font("",Font.ITALIC,14));
		timeLabel.setForeground(Color.red);
		timeLabel.setBorder(BorderFactory.createEmptyBorder(0,0,0,0));
		timeLabel.setBounds(10, 230, 200, 20);
		timePanel.add(timeLabel);
	}
	static void IfPasswordEqualsName() {
		CustomerRegistration CR = new CustomerRegistration();
		if(name.equalsIgnoreCase(password)) 
		{
			label();
		}
			
		
			
		}
	
	static void addblok() {
		
	}
	
}

