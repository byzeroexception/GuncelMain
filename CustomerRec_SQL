	static void Fname() throws SQLException {
		Fname.disable();
		c = dp.getConnection();	
		stmt=c.createStatement();  
		stmt=c.createStatement();  
		rs=stmt.executeQuery("select * from kullanicilar.bilgiler");
		while(rs.next()) {
			Fname.setText(rs.getString(2));}
			
			
		Fname.setBackground(new Color(90,90,90));
