	static void addBlok() {
		CustomerRegistration();
		CustomerRegistrationLis();
		txPanel();
		txtLabel();
	    txPanel1();
	    txtLabel1();
	    FnamePanel();
	    Fname();
	    txtPanel1();
	    txtLabel2();
	    txtPanel2();
